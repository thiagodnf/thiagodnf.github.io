{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://https://s3researchlab.github.io/schemas/committee-member.schema.json",
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "title",
            "year",
            "roles"
        ],
        "properties": {
            "name": {
                "type": "string"
            },
            "year": {
                "type": "number"
            },
            "roles": {
                "type": "array",
                "items": {
                    "type": "string",
                    "enum": [
                        "Research Track",
                        "Artifact Evaluation Track",
                        "Industry Showcase Track",
                        "Publicity and Social Media Chair",
                        "Website and Multimedia Chair",
                        "Tools Demo Track"
                    ]
                }
            }
        }
    }
}
